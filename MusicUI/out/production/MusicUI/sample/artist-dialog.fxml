<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<DialogPane fx:controller="sample.ArtistController"
            xmlns:fx="http://javafx.com/fxml">

    <headerText>
        Fill in the information for the new artist
    </headerText>

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Artist Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="artistField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>